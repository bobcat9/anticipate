<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/floating_size"
    android:layout_height="@dimen/floating_size"
    android:orientation="vertical">


    <ImageView
        android:id="@id/bubble_quick_switch_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bubble"
        android:contentDescription="@null"
        android:padding="16dp" />

    <com.pluscubed.anticipate.widget.ProgressWheel
        android:id="@id/bubble_quick_switch_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:matProg_barWidth="2dp"
        app:matProg_fillRadius="true"
        app:matProg_progressIndeterminate="true" />

</FrameLayout>