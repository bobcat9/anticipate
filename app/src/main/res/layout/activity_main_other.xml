<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="-4dp"
    android:layout_marginRight="-4dp"
    android:layout_marginTop="-4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingStart="16dp"
            android:theme="@style/Theme.Anticipate.DarkAccent"
            android:weightSum="1"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/animation"
                android:textSize="13sp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@id/spinner_animation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:listitem="@layout/support_simple_spinner_dropdown_item" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingStart="16dp"
            android:theme="@style/Theme.Anticipate.DarkAccent"
            android:weightSum="1"
            tools:ignore="UseCompoundDrawables"
            tools:layout_height="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_tab_browser"
                android:textSize="13sp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@id/spinner_browser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:listitem="@layout/support_simple_spinner_dropdown_item"
                tools:visibility="gone" />

            <Button
                android:id="@id/button_install_chrome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/install_chrome" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:paddingStart="16dp"
            android:theme="@style/Theme.Anticipate.DarkAccent"
            tools:ignore="UseCompoundDrawables"
            tools:layout_height="48dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/per_app_filter_mode"
                android:textSize="13sp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@id/spinner_per_app_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:listitem="@layout/support_simple_spinner_dropdown_item" />

            <Button
                android:id="@id/button_configure_perapp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/configure"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/linear_preload_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:paddingStart="16dp"
            tools:ignore="UseCompoundDrawables">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:text="@string/floating_window_checkbox"
                android:textSize="13sp"
                tools:ignore="RtlSymmetry" />

            <include layout="@layout/switch_layout" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>